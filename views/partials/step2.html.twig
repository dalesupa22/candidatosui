<div class="is-full column step2 {{name}} inactive">
	<h3 class="subtitle is-6">¿Qué es lo que te preocupa de <strong>{{name}}</strong>?</h3>
	<div class="field">
		<div class="selector with-select outter-select only-texts">
			{% for item in items %}
			<div>
				<div class="option text" data-value="{{item}}">
					<p>{{item}}</p>
				</div>
			</div>
			{% endfor %}
		</div>
	</div>
	{% include 'partials/extra_comment.twig' %}
	<div class="field">
		<a class="button is-rounded is-linkcolor is-small backstep is-hidden-mobile" data-step="{{name}}">
		    <span class="icon">
		      <i class="fas fa-chevron-left "></i>
		    </span>
			<span>Atras</span>
		</a>
	</div>
</div>